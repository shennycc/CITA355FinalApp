<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MyFirstMauiApp.StudentInfo"
    Title="Student Info">


    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Entry x:Name="StudentIdEntry" Placeholder="Student ID" />
            <Entry x:Name="FirstNameEntry" Placeholder="First Name" />
            <Entry x:Name="LastNameEntry" Placeholder="Last Name" />
            <Entry x:Name="EmailEntry" Placeholder="Email" Keyboard="Email" />
            
            <Label x:Name="ErrorLabel" TextColor="Red" IsVisible="False" />

            <Button Text="Start Test" Clicked="OnStartTestClicked" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
