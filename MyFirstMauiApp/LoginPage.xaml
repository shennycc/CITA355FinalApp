<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"        
xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"

             x:Class="MyFirstMauiApp.LoginPage"
             Title="Login Page">

    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Enter Exam Password" FontSize="20" HorizontalOptions="Center" />
        <Entry x:Name="PasswordEntry" Placeholder="Enter password" IsPassword="True" />
        <Button Text="Login" Clicked="OnLoginClicked" />
        <Label x:Name="ErrorLabel" TextColor="Red" IsVisible="False" />
    </VerticalStackLayout>
</ContentPage>
